<!-- app/views/devise/registrations/new.html.erb -->

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-8">
    <h2 class="text-2xl font-semibold text-center mb-6">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <%= f.submit "Sign Up", class: "w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600" %>
    <% end %>

    <div class="mt-6 text-center text-sm">
      Already have an account? <%= link_to "Log in", new_user_session_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
